{
  "network_settings": {
    "description": "网络请求设置",
    "type": "object",
    "hint": "网页请求相关配置选项",
    "items": {
      "max_content_length": {
        "description": "最大网页内容长度",
        "type": "int",
        "hint": "限制抓取的网页内容字符数，避免处理过大的网页",
        "default": 10000
      },
      "request_timeout": {
        "description": "请求超时时间(秒)",
        "type": "int",
        "hint": "网页请求的超时时间，超过该时间将放弃抓取",
        "default": 30
      },
      "retry_count": {
        "description": "请求重试次数",
        "type": "int",
        "hint": "网页请求失败后的重试次数",
        "default": 3
      },
      "retry_delay": {
        "description": "请求重试间隔(秒)",
        "type": "int",
        "hint": "网页请求失败后，重试前的等待时间",
        "default": 2
      },
      "user_agent": {
        "description": "自定义User-Agent",
        "type": "string",
        "hint": "自定义请求头中的User-Agent，用于绕过某些网站的访问限制",
        "default": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36"
      },
      "proxy": {
        "description": "HTTP代理配置",
        "type": "string",
        "hint": "HTTP代理地址，格式为http://username:password@host:port，留空表示不使用代理",
        "default": ""
      }
    }
  },
  "domain_settings": {
    "description": "域名管理设置",
    "type": "object",
    "hint": "控制允许和禁止分析的域名",
    "items": {
      "allowed_domains": {
        "description": "允许的域名列表",
        "type": "text",
        "hint": "只分析指定域名的网页，每行一个域名（留空表示允许所有域名）",
        "default": ""
      },
      "blocked_domains": {
        "description": "禁止的域名列表",
        "type": "text",
        "hint": "不分析指定域名的网页，每行一个域名",
        "default": ""
      }
    }
  },
  "analysis_settings": {
    "description": "分析设置",
    "type": "object",
    "hint": "网页分析相关配置选项",
    "items": {
      "auto_analyze": {
        "description": "自动分析检测到的链接",
        "type": "bool",
        "hint": "是否自动分析消息中检测到的网页链接",
        "default": true
      },
      "enable_emoji": {
        "description": "启用emoji图标",
        "type": "bool",
        "hint": "在分析结果中使用emoji图标增强可读性",
        "default": true
      },
      "enable_statistics": {
        "description": "显示内容统计",
        "type": "bool",
        "hint": "在分析结果中显示字符数、段落数等统计信息",
        "default": true
      },
      "max_summary_length": {
        "description": "最大摘要长度",
        "type": "int",
        "hint": "限制分析摘要的最大字符数",
        "default": 2000
      },
      "send_content_type": {
        "description": "发送内容类型",
        "type": "string",
        "hint": "允许自定义发送的内容类型：both（分析结果+截图）、analysis_only（仅分析结果）、screenshot_only（仅截图）",
        "default": "both",
        "_special": "select",
        "options": ["both", "analysis_only", "screenshot_only"]
      }
    }
  },
  "screenshot_settings": {
    "description": "截图设置",
    "type": "object",
    "hint": "网页截图相关配置选项",
    "items": {
      "enable_screenshot": {
        "description": "启用网页截图",
        "type": "bool",
        "hint": "在分析结果中包含网页截图",
        "default": true
      },
      "screenshot_quality": {
        "description": "截图质量",
        "type": "int",
        "hint": "网页截图的质量（0-100）",
        "default": 80
      },
      "screenshot_width": {
        "description": "截图宽度",
        "type": "int",
        "hint": "网页截图的宽度像素",
        "default": 1280
      },
      "screenshot_height": {
        "description": "截图高度",
        "type": "int",
        "hint": "网页截图的高度像素",
        "default": 720
      },
      "screenshot_full_page": {
        "description": "截取整页",
        "type": "bool",
        "hint": "是否截取整个网页，而不仅仅是可见部分",
        "default": false
      },
      "screenshot_wait_time": {
        "description": "截图等待时间",
        "type": "int",
        "hint": "截图前等待页面加载的时间（毫秒）",
        "default": 2000
      },
      "screenshot_format": {
        "description": "截图格式",
        "type": "string",
        "hint": "网页截图的格式，支持jpeg和png",
        "default": "jpeg"
      }
    }
  },
  "llm_settings": {
    "description": "LLM设置",
    "type": "object",
    "hint": "大语言模型相关配置选项",
    "items": {
      "llm_enabled": {
        "description": "启用LLM智能分析",
        "type": "bool",
        "hint": "是否启用大语言模型进行智能分析和总结",
        "default": true
      },
      "llm_provider": {
        "description": "LLM提供商",
        "type": "string",
        "hint": "选择用于网页分析的LLM提供商",
        "_special": "select_provider"
      },
      "custom_prompt": {
        "description": "自定义分析提示词",
        "type": "text",
        "hint": "自定义LLM分析提示词模板，可使用变量：{title}、{url}、{content}、{max_length}",
        "default": ""
      }
    }
  },
  "translation_settings": {
    "description": "翻译设置",
    "type": "object",
    "hint": "网页内容翻译配置选项",
    "items": {
      "enable_translation": {
        "description": "启用网页翻译",
        "type": "bool",
        "hint": "是否启用网页内容翻译功能",
        "default": false
      },
      "target_language": {
        "description": "目标语言",
        "type": "string",
        "hint": "翻译的目标语言，如zh、en、ja等",
        "default": "zh"
      },
      "translation_provider": {
        "description": "翻译提供商",
        "type": "string",
        "hint": "选择用于翻译的提供商，支持LLM内置翻译或外部API",
        "default": "llm"
      },
      "custom_translation_prompt": {
        "description": "自定义翻译提示词",
        "type": "text",
        "hint": "自定义LLM翻译提示词模板，可使用变量：{content}、{target_language}",
        "default": ""
      }
    }
  },
  "cache_settings": {
    "description": "缓存设置",
    "type": "object",
    "hint": "分析结果缓存配置选项",
    "items": {
      "enable_cache": {
        "description": "启用结果缓存",
        "type": "bool",
        "hint": "是否启用分析结果缓存，避免重复分析同一网页",
        "default": true
      },
      "cache_expire_time": {
        "description": "缓存过期时间",
        "type": "int",
        "hint": "缓存结果的过期时间（分钟）",
        "default": 1440
      },
      "max_cache_size": {
        "description": "最大缓存数量",
        "type": "int",
        "hint": "最大缓存的分析结果数量",
        "default": 100
      }
    }
  },
  "content_extraction_settings": {
    "description": "内容提取设置",
    "type": "object",
    "hint": "特定类型内容提取配置选项",
    "items": {
      "enable_specific_extraction": {
        "description": "启用特定内容提取",
        "type": "bool",
        "hint": "是否启用特定类型内容提取功能",
        "default": false
      },
      "extract_types": {
        "description": "提取内容类型",
        "type": "text",
        "hint": "要提取的特定内容类型，每行一个，支持：title, content, images, links, tables, lists, code",
        "default": "title\ncontent"
      }
    }
  },
  "merge_forward_settings": {
    "description": "合并转发设置",
    "type": "object",
    "hint": "消息合并转发相关配置选项",
    "items": {
      "group": {
        "description": "群聊启用合并转发",
        "type": "bool",
        "hint": "是否在群聊中启用合并转发功能",
        "default": false
      },
      "private": {
        "description": "私聊启用合并转发",
        "type": "bool",
        "hint": "是否在私聊中启用合并转发功能",
        "default": false
      },
      "include_screenshot": {
        "description": "合并转发包含截图",
        "type": "bool",
        "hint": "是否将截图合并到转发消息中，而不是单独发送",
        "default": false
      }
    }
  },
  "group_settings": {
    "description": "群聊设置",
    "type": "object",
    "hint": "群聊相关配置选项",
    "items": {
      "group_blacklist": {
        "description": "群聊黑名单",
        "type": "text",
        "hint": "在这些群聊中禁用自动分析功能，每行一个群号",
        "default": ""
      }
    }
  }
}